
@model dotNETCoreWebAppMVC.Models.EditProductViewModel
@{}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken
    @Html.HiddenFor(m => m.Id)

    <h1>@ViewBag.id</h1>
    <div class="mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Description)
    </div>
    <div class="m-3">
        Current image:
        <img src="@Model.Image" alt="@Model.Image" style="max-width: 100px" />
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Image)
        <input type="file" name="Image" class="form-control-file" />
        @Html.ValidationMessageFor(m => m.Image)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.CategoryId)
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}